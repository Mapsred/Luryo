
{% trans_default_domain 'FOSUserBundle' %}
<link href="{{ asset("assets/user/css/connexion.css") }}" rel="stylesheet">

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% block body %}
<h1 class="text-uppercase text-center">rejoins nos équipes de folies</h1>
    <div class="container">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="col-md-offset-3 col-md-6 form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required
                       placeholder="Pseudo" class="login_form_control form-control" />
            </div>
            <div class="col-md-offset-3 col-md-6 form-group">
                <input type="password" id="password" name="_password" required
                       placeholder="Mot de passe" class="login_form_control form-control" />
            </div>

            <div class="col-md-offset-3 col-md-6 form-group">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                       class="form-control login_form_control connect" />
            </div>

            <div class="col-md-offset-3 col-md-6 text-left">
                <a href="{{ path("fos_user_resetting_request") }}" class="login_link pull-left">Mot de passe oublié ?</a>
                <a href="{{ path("fos_user_registration_register") }}" class="login_link pull-right">S'inscrire ici</a>

            </div>
        </form>
    </div>

{% endblock %}

{% block footer %}
{% endblock %}