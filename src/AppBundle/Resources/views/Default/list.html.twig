{% extends 'AppBundle:Default:index.html.twig' %}
{% block title %}Liste de voyages {% endblock %}
{% block head %}
    <link href="{{ asset("assets/app/css/liste.css") }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <i class="fa fa-globe" aria-hidden="true"></i>
    <h2>Les offres voyages</h2>
    <div class="container-fluid">
        <div class="row">
            {% for travel in travels %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="overlay">
                            <a href="{{ path("detail_page", {'id': travel.id}) }}">
                                {% set img = "uploads/images/"~ travel.images.get(0).file.filename %}
                                <div class="cover col-md-12"></div>
                                <img class="profile-pic" src="{{ asset(img) }}" alt="{{ travel.title }}">
                                <div id="deux">Voir plus</div>
                            </a>
                        </div>
                        <div class="caption">
                            <h3><a href="{{ path("detail_page", {'id': travel.id}) }}">{{ travel.title }}</a></h3>
                            <p class="text-center">{{ travel.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

