{% extends 'AppBundle:Default:index.html.twig' %}

{% block title %}Contact{% endblock %}
{% block head %}
    {% stylesheets 'assets/app/css/construction.css'
    'assets/bower/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css'
    'assets/bower/select2/dist/css/select2.min.css' output='compiled/css/bootstrap-datepicker3.min.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1 class="text-center text-contact">Nous contacter</h1>
    <div class="container-fluid">
        <div class="col-md-6 col-md-offset-1">
            <form action="" class="form">
                <input type="text" name="prenom" placeholder="Prénom" class="input-contact"><br class="firstbr">
                <input type="text" name="nom" placeholder="Nom" class="input-contact group"><br class="firstbr">
                <input type="text" name="tel" placeholder="N° de téléphone" class="input-contact group"><br><br>
                <input type="text" name="mail" placeholder="Adresse mail" class="input-contact input-mail"><br><br>
                <input type="text" name="motif" placeholder="Motif" class="input-contact "><br><br>
                <textarea rows="4" cols="50" name="message" class="input-contact input-textarea">Votre message</textarea><br><br>
                <input type="submit" value="Submit" class="send">
            </form>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}